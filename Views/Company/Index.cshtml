@model PagedList.IPagedList<Model.EF.Company>
@using PagedList.Mvc;

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!-- Carousel Start -->
<div class="container-fluid p-0">
    @{ Html.RenderAction("Carousel_Company", "Home"); }
</div>
<!-- Carousel End -->
<!-- Jobs Start -->
<div class="container-xxl py-5">
    <div class="container">
        <div class="title d-flex">
            <h4 class="text-center mb-5 wow fadeInUp" data-wow-delay="0.1s">Công ty nổi bật</h4>
        </div>
        <div class="tab-class text-center wow fadeInUp" data-wow-delay="0.3s">
            <div class="tab-content">
                <div id="tab-1" class="tab-pane fade show p-0 active">
                    @{
                        var itemsPerPage = 3;
                        var totalRows = (int)Math.Ceiling((double)Model.Count / itemsPerPage);
                    }

                    @for (var row = 0; row < totalRows; row++)
                    {
                        <div class="box d-flex justify-content-between mb-4">
                            @for (var col = 0; col < itemsPerPage; col++)
                            {
                                var index = row * itemsPerPage + col;
                                if (index < Model.Count)
                                {
                                    var item = Model[index];
                                    @Html.Partial("_Item_Company", item)
                                }
                            }
                        </div>
                    }

                    @Html.PagedListPager(Model, page => Url.Action("Index", new { page, @searchString = @ViewBag.SearchString }))

                    <style>
                        .row-item-company {
                            background-color: #FFF;
                            width: 32%;
                            height: 350px;
                            border-radius: 4px;
                            box-shadow: rgba(99, 99, 99, 0.2) 0px 2px 8px 0px;
                        }

                            .row-item-company:hover {
                                cursor: pointer;
                                box-shadow: rgba(255, 255, 255, 0.1) 0px 1px 1px 0px inset, rgba(50, 50, 93, 0.25) 0px 50px 100px -20px, rgba(0, 0, 0, 0.3) 0px 30px 60px -30px;
                            }

                            .row-item-company .background {
                                width: 100%;
                                height: 30%;
                                border-top-right-radius: 4px;
                                border-top-left-radius: 4px;
                            }

                            .row-item-company .avatar {
                                width: 70px;
                                height: 70px;
                                border-radius: 4px;
                                border: 1px solid #E7F0FA;
                                left: 12px;
                                top: calc(30% - 35px);
                            }
                            .row-item-company .company-content a {

                            }


                            .row-item-company .company-content a, .row-item-company .company-content p {
                                text-align: left;
                            }

                            .row-item-company .company-content p {
                                display: -webkit-box;
                                height: max-content;
                                -webkit-line-clamp: 6;
                                -webkit-box-orient: vertical;
                                overflow: hidden;
                                text-overflow: ellipsis;
                            }

                        .pagination {
                            display: flex;
                            justify-content: center;
                            align-items: center;
                            height: 5rem;
                            margin: 3rem;
                            border-radius: 0.6rem;
                            background: #ffffff;
                            box-shadow: 0 0.8rem 2rem rgba(#5a6181, 0.05);
                        }

                            .pagination li {
                                display: flex;
                                justify-content: center;
                                align-items: center;
                                margin: 8px;
                                font-size: 14px;
                                cursor: pointer;
                                padding: 4px 8px !important;
                                border-radius: 8px;
                                font-weight: 700;
                                border-radius: 0.4rem;
                            }

                                .pagination li:hover a {
                                    color: #4CA6A8;
                                }

                            .pagination .active {
                                color: #ffffff;
                                background: #4CA6A8;
                                font-weight: 600;
                                border: 1px solid #4CA6A8;
                            }

                            .pagination .PagedList-skipToPrevious, .pagination .PagedList-skipToNext {
                                color: #2B9BFF;
                                pointer-events: none;
                                font-size: 20px;
                            }
                    </style>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- Jobs End -->
<!-- About Start -->
<div class="container-xxl py-5">
    <div class="container">
        <div class="row g-5 align-items-center">
            <div class="col-lg-6 wow fadeIn" data-wow-delay="0.1s">
                <div class="row g-0 about-bg rounded overflow-hidden">
                    <div class="col-6 text-start">
                        <img class="img-fluid w-100" src="~/Assets/Client/JobsFinder/img/imgJobsDetail1.jpeg">
                    </div>
                    <div class="col-6 text-start">
                        <img class="img-fluid" src="~/Assets/Client/JobsFinder/img/banner2.jpeg" style="width: 85%; margin-top: 15%;">
                    </div>
                    <div class="col-6 text-end">
                        <img class="img-fluid" src="~/Assets/Client/JobsFinder/img/banner3.jpeg" style="width: 85%;">
                    </div>
                    <div class="col-6 text-end">
                        <img class="img-fluid w-100" src="~/Assets/Client/JobsFinder/img/banner4.jpeg">
                    </div>
                </div>
            </div>
            <div class="col-lg-6 wow fadeIn" data-wow-delay="0.5s">
                <h1 class="mb-4">Hỗ trợ tìm kiếm việc làm tốt nhất và ứng viên tiềm năng.</h1>
                <p class="mb-4">Tìm việc mơ ước dễ dàng - duyệt hàng nghìn việc làm và nộp đơn ngay hôm nay trên nền tảng tìm kiếm việc làm của chúng tôi.</p>
                <p><i class="fa fa-check text-primary me-3"></i>Hàng ngàn công việc khác nhau</p>
                <p><i class="fa fa-check text-primary me-3"></i>Kết nối doanh nghiệp dễ dàng</p>
                <p><i class="fa fa-check text-primary me-3"></i>Hoàn toàn miễn phí</p>
                <a class="btn btn-primary py-3 px-5 mt-3 btn-viewAll" href="">Xem thêm các bài viết</a>
            </div>
        </div>
    </div>
</div>
<!-- About End -->